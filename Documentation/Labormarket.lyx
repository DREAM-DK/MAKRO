\begin_layout Standard
\begin_inset Formula 
\[
\left(\frac{\lambda_{a,t}^{lf}}{1-q_{a,t}^{lf}}\right)^{\eta^{lf}}=x_{t}\left\{ \frac{1}{Z_{a,t}^{r^{b}}}\left[\frac{\left(1-\tau_{a,t}\right)}{Z_{a,t}^{\tau}}\left(1-r_{a,t}^{b}\right)-\frac{\left(\lambda_{a,t}^{h}h_{a,t}^{e}\right)^{\eta^{h}}}{1+\eta^{h}}\right]+s_{a,t}\left(1-\delta_{a,t}\right)\beta\frac{Z_{a+1,t+1}^{lf}}{Z_{a,t}^{lf}}\left(\frac{1-x_{t+1}}{x_{t+1}}\right)\left(\frac{\lambda_{a+1,t+1}^{lf}}{1-q_{a+1,t+1}^{lf}}\right)^{\eta^{lf}}\right\} 
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
q_{a,t}^{lf}=1-\lambda_{a,t}^{lf}\left[x_{t}\right]^{-1/\eta^{lf}}\left\{ \frac{1}{Z_{a,t}^{r^{b}}}\left\{ \frac{\left(1-\tau_{a,t}\right)}{Z_{a,t}^{\tau}}\left(1-r_{a,t}^{b}\right)-\frac{\left(\lambda_{a,t}^{h}h_{a,t}^{e}\right)^{\eta^{h}}}{1+\eta^{h}}\right\} +s_{a,t}\left(1-\delta_{a,t}\right)\beta\frac{Z_{a+1,t+1}^{lf}}{Z_{a,t}^{lf}}\left(\frac{1-x_{t+1}}{x_{t+1}}\right)\left(\frac{\lambda_{a+1,t+1}^{lf}}{1-q_{a+1,t+1}^{lf}}\right)^{\eta^{lf}}\right\} ^{-1/\eta^{lf}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\partial\ln q_{a,t}^{lf}}{\partial r_{a,t}^{b}}=-\frac{\left(1-\tau_{a,t}\right)}{Z_{a,t}^{r^{b}}Z_{a,t}^{\tau}}\frac{1}{\eta^{lf}}\left[\frac{1-q_{a,t}^{lf}}{q_{a,t}^{lf}}\right]\left[\frac{\left(1-\tau_{a,t}\right)}{Z_{a,t}^{r^{b}}Z_{a,t}^{\tau}}\left(1-r_{a,t}^{b}\right)-\frac{1}{Z_{a,t}^{r^{b}}}\frac{\left(\lambda_{a,t}^{h}h_{a,t}^{e}\right)^{\eta^{h}}}{1+\eta^{h}}+s_{a,t}\left(1-\delta_{a,t}\right)\beta\frac{Z_{a+1,t+1}^{lf}}{Z_{a,t}^{lf}}\left(\frac{1-x_{t+1}}{x_{t+1}}\right)\left(\frac{\lambda_{a+1,t+1}^{lf}}{1-q_{a+1,t+1}^{lf}}\right)^{\eta^{lf}}\right]^{-1}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\partial\ln q_{a,t}^{lf}}{\partial r_{a,t}^{b}}=-\frac{1}{\eta^{lf}}x_{t}\left[\lambda_{a,t}^{lf}\right]^{-\eta^{lf}}\frac{1}{Z_{a,t}^{r^{b}}}\frac{\left(1-\tau_{a,t}\right)}{Z_{a,t}^{\tau}}\frac{\left(1-q_{a,t}^{lf}\right)^{1+\eta^{lf}}}{q_{a,t}^{lf}}
\]

\end_inset


\end_layout

\begin_layout Standard
We get 
\begin_inset Formula $Z_{a,t}^{r^{b}}$
\end_inset

 by equating the parenthesis containing the 
\begin_inset Formula $\left(1-r_{a,t}^{b}\right)$
\end_inset

 lifted to the power of 
\begin_inset Formula $1/\eta^{lf}$
\end_inset

 to the same parenthesis except without the Z-term, and with the power 
\begin_inset Formula $1/\eta^{b}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left\{ \frac{1}{Z_{a,t}^{r^{b}}}\left[\frac{\left(1-\tau_{a,t}\right)}{Z_{a,t}^{\tau}}\left(1-r_{a,t}^{b}\right)-\frac{\left(\lambda_{a,t}^{h}h_{a,t}^{e}\right)^{\eta^{h}}}{1+\eta^{h}}\right]\right\} ^{1/\eta^{lf}}=\left[\frac{\left(1-\tau_{a,t}\right)}{Z_{a,t}^{\tau}}\left(1-r_{a,t}^{b}\right)-\frac{\left(\lambda_{a,t}^{h}h_{a,t}^{e}\right)^{\eta^{h}}}{1+\eta^{h}}\right]^{1/\eta^{b}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{1}{Z_{a,t}^{r^{b}}}=\left[\frac{\left(1-\tau_{a,t}\right)}{Z_{a,t}^{\tau}}\left(1-r_{a,t}^{b}\right)-\frac{\left(\lambda_{a,t}^{h}h_{a,t}^{e}\right)^{\eta^{h}}}{1+\eta^{h}}\right]^{\eta^{lf}/\eta^{b}-1}
\]

\end_inset


\end_layout

\begin_layout Standard
inserting 
\begin_inset Formula $Z_{a,t}^{r^{b}}$
\end_inset

 we get
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\frac{\lambda_{a,t}^{lf}}{1-q_{a,t}^{lf}}\right)^{\eta^{lf}}=x_{t}\left\{ \left[\frac{\left(1-\tau_{a,t}\right)}{Z_{a,t}^{\tau}}\left(1-r_{a,t}^{b}\right)-\frac{\left(\lambda_{a,t}^{h}h_{a,t}^{e}\right)^{\eta^{h}}}{1+\eta^{h}}\right]^{\eta^{lf}/\eta^{b}}+s_{a,t}\left(1-\delta_{a,t}\right)\beta\frac{Z_{a+1,t+1}^{lf}}{Z_{a,t}^{lf}}\left(\frac{1-x_{t+1}}{x_{t+1}}\right)\left(\frac{\lambda_{a+1,t+1}^{lf}}{1-q_{a+1,t+1}^{lf}}\right)^{\eta^{lf}}\right\} 
\]

\end_inset


\end_layout

\begin_layout Standard
We probably want to change this in the future, and set 
\begin_inset Formula $Z_{a,t}^{r^{b}}$
\end_inset

 in order to 
\begin_inset Formula $\frac{\partial\ln q_{a,t}^{lf}}{\partial\left(1-r_{a,t}^{b}\right)}$
\end_inset

to an empirically estimated constant.
 
\end_layout

\end_inset


\end_layout

\begin_layout Standard
The elasticity of labor supply with respect to changes in the net benefit
 replacement rate is
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\partial\ln q_{a,t}^{lf}}{\partial r_{a,t}^{b}}=-\frac{1}{\eta^{lf}}x_{t}\frac{1}{Z_{a,t}^{r^{b}}}\frac{\left(1-\tau_{a,t}\right)}{Z_{a,t}^{\tau}}\left(\frac{\lambda_{a,t}^{lf}}{1-q_{a,t}^{lf}}\right)^{-\eta^{lf}}\left(\frac{1-q_{a,t}^{lf}}{q_{a,t}^{lf}}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Finally, we define the last control variable 
\begin_inset Formula $Z_{a,t}^{r^{b}}$
\end_inset

 as
\begin_inset Formula 
\[
\frac{1}{Z_{a,t}^{r^{b}}}=\left[\frac{\left(1-\tau_{a,t}\right)}{Z_{a,t}^{\tau}}\left(1-r_{a,t}^{b}\right)-\frac{\left(\lambda_{a,t}^{h}h_{a,t}^{e}\right)^{\eta^{h}}}{1+\eta^{h}}\right]^{\eta^{lf}/\eta^{b}-1}
\]

\end_inset


\end_layout

\begin_layout Standard
The parameter 
\begin_inset Formula $\eta^{lf}$
\end_inset

 determines the effect of labor market conditions, as measured by the job
 finding rate 
\begin_inset Formula $x_{t}$
\end_inset

, on labor force participation, while 
\begin_inset Formula $\eta^{b}$
\end_inset

 corresponds to the inverse elasticity of labor market participation wrt.
 to the net compensation rate.
\end_layout

\begin_layout Subsection
Non-resident workers
\begin_inset CommandInset label
LatexCommand label
name "subsec:Non-resident"

\end_inset


\end_layout

\begin_layout Standard
In our model, total employment includes employed residents in Denmark and
 non-resident workers.
 Above, we outlined the decisions made by resident households.
 However, we assume that firms do not distinguish between residents and
 non-residents when they hire.
 Non-residents workers are cross-border agents that work in Denmark, but
 live abroad most or all of the year.
 These non-resident workers are not part of the resident population 
\begin_inset Formula $N_{a,t}$
\end_inset

 and they do not have any direct consumption in Denmark.
 Non-resident workers provide search input, 
\begin_inset Formula $n_{a,t}^{s,f}$
\end_inset

, into the matching function and generate employment 
\begin_inset Formula $n_{a,t}^{f}$
\end_inset

.
 They face the same job destruction rates and die and migrate at the same
 rate as the locals, and they stay in their jobs when they are not destroyed
 but do not demand local consumption or housing.
 However, in order to match the data, they have different productivity and
 work different hours than resident workers.
\end_layout

\begin_layout Standard
Non-resident workers have the same probability of finding a job as local
 job searchers, 
\begin_inset Formula $x_{t}$
\end_inset

, and the number of employed non-resident workers obeys the law of motion
\begin_inset Formula 
\[
n_{t}^{f}=\left(1-\delta_{t}\right)n_{t-1}^{f}+x_{t}n_{t}^{s,f}
\]

\end_inset

The total number of cross-border persons who are either employed or searching
 for a job in Denmark can be written as
\begin_inset Formula 
\[
N_{t}^{f}=\left(1-\delta_{t}\right)n_{t-1}^{f}+n_{t}^{s,f}
\]

\end_inset

We assume that this total is exogenous.
 The number of non-resident workers searching for a job is then endogenous
 and given by
\begin_inset Formula 
\[
n_{t}^{s,f}=N_{t}^{f}-\left(1-\delta_{t}\right)n_{t-1}^{f}
\]

\end_inset

E.g.
 when the job-finding rate is higher, more potential migrant workers find
 employment, reducing the search input of non-resident workers in the following
 period.
\end_layout

\begin_layout Standard
Since non-resident workers only enter the model through the firm and the
 matching function, their age decomposition is irrelevant, and only their
 aggregate contribution matters.
 Our default assumption is that the number of hours worked pr.
 non-resident worker is proportional to that of Danish households
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
h_{t}^{f}=\mu_{t}^{hf}\frac{\sum h_{a,t}^{e}n_{a,t}^{e}}{\sum n_{a,t}^{e}}
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\mu_{t}^{hf}$
\end_inset

 is calibrated to match the data.
\end_layout

\begin_layout Subsection
Firms
\end_layout

\begin_layout Standard
What follows applies to all private sector firms in the model while the
 public sector is treated differently.
 There is a unit mass of identical firms in each (private) sector 
\begin_inset Formula $s$
\end_inset

.
 Employment in the firm is given by the measure 
\begin_inset Formula $n_{t}$
\end_inset

 which sums residents and non-resident workers.
\end_layout

\begin_layout Standard
Total workers in sector 
\begin_inset Formula $s$
\end_inset

, 
\begin_inset Formula $n_{s,t}$
\end_inset

, contribute with a total amount of productive hours 
\begin_inset Formula $\rho_{s,t}h_{s,t}n_{s,t}$
\end_inset

, where 
\begin_inset Formula $\rho_{s,t}$
\end_inset

 is the productivity factor and 
\begin_inset Formula $h_{s,t}$
\end_inset

 is the hours factor in the firm.
 We cover their link to the productivity and hours of the households in
 section (
\begin_inset CommandInset ref
LatexCommand ref
reference "subsec:Hours-and-productivity"
plural "false"
caps "false"
noprefix "false"

\end_inset

) on aggregation.
\end_layout

\begin_layout Standard
Firms post vacancies and the economy wide matching function, 
\begin_inset Formula $m_{t}$
\end_inset

, dictates their success in filling them (see section 
\begin_inset CommandInset ref
LatexCommand ref
reference "subsec:The-matching-function"
plural "false"
caps "false"
noprefix "false"

\end_inset

 for details on the matching function).
 The matching process occurs in period 
\begin_inset Formula $t$
\end_inset

, after which employment is determined and production occurs.
 The firm cannot affect the hours worked by its employees and takes them
 as given.
 An effort/utilization choice by the firm is added to the model to help
 generate pro-cyclical value added per worker.
 Utilization is discussed in the production chapter.
\end_layout

\begin_layout Subsubsection
The problem of the firm
\end_layout

\begin_layout Standard
Firms maximize profits and choose an optimal amount of labor input.
 When firms post vacancies, they hire workers.
 Although workers are “attached” to hours and productivity, the choice variable
 for the firm is 
\begin_inset Formula $n$
\end_inset

 as the firm takes 
\begin_inset Formula $m$
\end_inset

 as given.
 Current profits (as relevant for the optimal employment decision) are given
 by
\begin_inset Formula 
\begin{equation}
\max_{n_{s,t}}\pi_{t}^{s}=\left(1-\tau_{s,t}^{c}\right)\left\{ p_{s,t}^{0}Y_{s}\left(L_{s,t}\right)-w_{t}\left(1+\tau_{s,t}^{L}\right)\rho_{s,t}h_{s,t}n_{s,t}\right\} 
\end{equation}

\end_inset

where 
\begin_inset Formula $\tau_{s,t}^{c}$
\end_inset

 are corporate taxes and 
\begin_inset Formula $Y_{s}$
\end_inset

 is gross-output as a function of labor input sold at price 
\begin_inset Formula $p_{s,t}^{0}$
\end_inset

.
 Wages paid by firms pr.
 employee, 
\begin_inset Formula $w_{t}\left(1+\tau_{s,t}^{L}\right)\rho_{s,t}h_{s,t}$
\end_inset

, contain payroll taxes and subsidies 
\begin_inset Formula $\tau_{s,t}^{L}$
\end_inset

, the market wage 
\begin_inset Formula $w_{t}$
\end_inset

 paid pr.
 productivity unit, sector specific productivity 
\begin_inset Formula $\rho_{s,t}$
\end_inset

 and hours pr.
 worker 
\begin_inset Formula $h_{s,t}$
\end_inset

.
 The object 
\begin_inset Formula $n_{s,t}$
\end_inset

 is the 
\emph on
stock
\emph default
 of employees as the employment decision of the firm is a dynamic one, just
 as the choice of its capital stock.
 Below we will derive the user cost of labor, 
\begin_inset Formula $p_{s,t}^{L}\equiv p_{s,t}^{0}\partial Q_{s}/\partial L_{t}$
\end_inset

 which is evaluated at firm optimization price 
\begin_inset Formula $p^{0}$
\end_inset

.
 This optimization price is derived in the production chapter.
 The production input 
\begin_inset Formula $L$
\end_inset

 is a broad concept of 
\begin_inset Quotes eld
\end_inset

labor
\begin_inset Quotes erd
\end_inset

.
 It is the total utilization of the effective labor input in productivity
 units.
 The effective labor input is net of hiring costs which are 
\begin_inset Quotes eld
\end_inset

paid
\begin_inset Quotes erd
\end_inset

 in foregone labor input.
\end_layout

\begin_layout Standard
The first-order condition for employment is
\begin_inset Formula 
\begin{equation}
\left(1-\tau_{s,t}^{c}\right)w_{t}\left(1+\tau_{s,t}^{L}\right)\rho_{s,t}h_{s,t}=\left(1-\tau_{s,t}^{c}\right)p_{s,t}^{L}\frac{\partial L_{s,t}}{\partial n_{s,t}}+\left(1-\tau_{s,t+1}^{c}\right)\beta_{s,t+1}p_{s,t+1}^{L}\frac{\partial L_{s,t+1}}{\partial n_{s,t}}\label{eq:firm_foc}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
which trades off the marginal costs against the marginal added profit for
 the marginal worker.
\end_layout

\begin_layout Standard
In the following subsections, we detail the components of the firm's problem.
 
\end_layout

\begin_layout Subsubsection
Wages and production input
\begin_inset CommandInset label
LatexCommand label
name "subsec:Wages-and-production"

\end_inset


\end_layout

\begin_layout Standard
We define 
\begin_inset Formula $L$
\end_inset

 as the net amount of productive labor input that goes into the CES production
 function.
 It contains the endogenous utilization factor 
\begin_inset Formula $u_{t}$
\end_inset

, sector specific productivity and hours 
\begin_inset Formula $\rho_{s,t}h_{s,t}$
\end_inset

, and finally contains the endogenous adjustment for the fraction of employment
 used in the hiring process which we denote by 
\begin_inset Formula $\chi$
\end_inset

 (detailed in subsection 
\begin_inset CommandInset ref
LatexCommand ref
reference "subsec:Vacancy-posting-costs"
plural "false"
caps "false"
noprefix "false"

\end_inset

 below):
\begin_inset Formula 
\[
L_{s,t}=u_{s,t}\rho_{s,t}h_{s,t}\left(1-\chi_{s,t}\right)n_{s,t}
\]

\end_inset

The cost of hiring is defined in terms of units of labor lost to production
 so that the total number of heads actually producing output is given by
 
\begin_inset Formula $(1-\chi)n$
\end_inset

.
 Finally, the choice variable for the firm is the number of workers, so
 that the relevant derivatives are
\begin_inset Formula 
\[
\frac{\partial L_{s,t}}{\partial n_{s,t}}=u_{s,t}\rho_{s,t}h_{s,t}\left(1-\frac{\partial\left(\chi_{s,t}n_{s,t}\right)}{\partial n_{s,t}}\right)
\]

\end_inset


\begin_inset Formula 
\[
\frac{\partial L_{s,t+1}}{\partial n_{s,t}}=-u_{s,t+1}\rho_{s,t+1}h_{s,t+1}\frac{\partial\left(\chi_{s,t+1}n_{s,t+1}\right)}{\partial n_{s,t}}
\]

\end_inset


\end_layout

\begin_layout Subsubsection
Vacancy posting costs
\begin_inset CommandInset label
LatexCommand label
name "subsec:Vacancy-posting-costs"

\end_inset


\end_layout

\begin_layout Standard
A unit mass of identical firms in sector 
\begin_inset Formula $s$
\end_inset

 posts vacancies 
\begin_inset Formula $v$
\end_inset

 and the law of motion for employment 
\begin_inset Formula $n$
\end_inset

 is
\begin_inset Formula 
\[
n_{s,t}=\left(1-\delta_{t}\right)n_{s,t-1}+m_{t}v_{s,t}
\]

\end_inset

The cost of posting vacancies is incurred in units of employment.
 We define an auxiliary endogenous variable 
\begin_inset Formula $\chi$
\end_inset

 such that 
\begin_inset Formula $\chi_{s,t}n_{s,t}$
\end_inset

 equals total vacancy posting costs:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\chi_{s,t}n_{s,t}=\kappa v_{s,t}+\frac{\gamma}{2}n_{s,t}\left[\frac{n_{s,t}}{n_{s,t-1}}/\frac{n_{s,t-1}}{\overline{n}_{s,t-2}}-1\right]^{2}+\lambda m_{t}v_{s,t}
\]

\end_inset


\end_layout

\begin_layout Standard
Vacancy costs are comprised of three terms, 1) a linear vacancy posting
 cost, 2) a quadratic labor adjustment cost, and 3) a matching cost which
 can be calibrated to match data on the cost of training new employees.
 Note that in the current version of MAKRO this component is set to zero.
\end_layout

\begin_layout Standard
The derivatives of total vacancy costs, wrt.
 to the firm's choice of employment, that go into the first-order condition
 of the firm are
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\partial\left(\chi_{s,t}n_{s,t}\right)}{\partial n_{s,t}}=\frac{\kappa}{m_{t}}+\frac{\gamma}{2}\left[\frac{n_{s,t}}{n_{s,t-1}}/\frac{n_{s,t-1}}{\overline{n}_{s,t-2}}-1\right]^{2}+\gamma\left[\frac{n_{s,t}}{n_{s,t-1}}/\frac{n_{s,t-1}}{\overline{n}_{s,t-2}}-1\right]\left[\frac{n_{s,t}}{n_{s,t-1}}/\frac{n_{s,t-1}}{\overline{n}_{s,t-2}}\right]+\lambda
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\partial\left(\chi_{s,t}n_{s,t}\right)}{\partial n_{s,t-1}}=-\left(1-\delta_{t}\right)\left[\frac{\kappa}{m_{t}}+\lambda\right]-2\gamma\frac{n_{s,t}}{n_{s,t-1}}\left[\frac{n_{s,t}}{n_{s,t-1}}/\frac{n_{s,t-1}}{\overline{n}_{s,t-2}}-1\right]\left[\frac{n_{s,t}}{n_{s,t-1}}/\frac{n_{s,t-1}}{\overline{n}_{s,t-2}}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
where we have used the law of motion for employment to eliminate the vacancies
 variable, i.e.
 using that
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
v_{s,t}=\frac{n_{s,t}-\left(1-\delta_{t}\right)n_{s,t-1}}{m_{t}}
\]

\end_inset


\end_layout

\begin_layout Subsubsection
Detailing the first-order condition
\end_layout

\begin_layout Standard
By rearranging the first-order condition (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:firm_foc"
plural "false"
caps "false"
noprefix "false"

\end_inset

) we get the expression
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
p_{s,t}^{L}=w_{t}\left(1+\tau_{s,t}^{L}\right)\rho_{s,t}h_{s,t}\left[\frac{\partial L_{s,t}}{\partial n_{s,t}}+\left(\frac{1-\tau_{s,t+1}^{c}}{1-\tau_{s,t}^{c}}\right)\hat{\beta}_{s,t+1}\frac{\partial L_{s,t+1}}{\partial n_{s,t}}\right]^{-1}
\]

\end_inset


\end_layout

\begin_layout Standard
where
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\hat{\beta}_{s,t+1}\equiv\beta_{s,t+1}\frac{p_{s,t+1}^{L}}{p_{s,t}^{L}}
\]

\end_inset


\begin_inset Foot
status open

\begin_layout Plain Layout
In order to ensure that actual employment converges with our model of structural
 employment on any stable growth path, the default setting is to exogenize
 
\begin_inset Formula $\hat{\beta}_{s,t+1}$
\end_inset

 such that it remains as it is in the baseline when we shock the model.
 The first-order condition retains forward-looking behavior since the derivative
s of 
\begin_inset Formula $L$
\end_inset

 contain endogenous variables.
 
\end_layout

\end_inset


\end_layout

\begin_layout Standard
Inserting the derivatives of 
\begin_inset Formula $L$
\end_inset

 we see clearly that in lieu of vacancy posting costs, the user cost of
 labor is simply the wage after taxes and utilization:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
p_{s,t}^{L}=w_{t}\left(1+\tau_{s,t}^{L}\right)\frac{1}{u_{s,t}}\left[1-\underbrace{\frac{\partial\left(\chi_{s,t}n_{s,t}\right)}{\partial n_{s,t}}-\left(\frac{1-\tau_{s,t+1}^{c}}{1-\tau_{s,t}^{c}}\right)\hat{\beta}_{s,t+1}\frac{u_{s,t+1}\rho_{s,t+1}h_{s,t+1}}{u_{s,t}\rho_{s,t}h_{s,t}}\frac{\partial\left(\chi_{s,t+1}n_{s,t+1}\right)}{\partial n_{s,t}}}_{\text{hiring costs}}\right]^{-1}
\]

\end_inset


\end_layout

\begin_layout Standard
or vice versa: firms post vacancies until the wage equals the marginal product
 of labor (user cost of labor) except for the wedge caused by hiring costs:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
w_{t}=p_{s,t}^{L}\frac{u_{s,t}}{1+\tau_{s,t}^{L}}\left[1-\underbrace{\frac{\partial\left(\chi_{s,t}n_{s,t}\right)}{\partial n_{s,t}}-\left(\frac{1-\tau_{s,t+1}^{c}}{1-\tau_{s,t}^{c}}\right)\hat{\beta}_{s,t+1}\frac{u_{s,t+1}\rho_{s,t+1}h_{s,t+1}}{u_{s,t}\rho_{s,t}h_{s,t}}\frac{\partial\left(\chi_{s,t+1}n_{s,t+1}\right)}{\partial n_{s,t}}}_{\text{hiring costs}}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
Note that sector specific hours and productivity disappear.
 This is consistent with the assumption that firms pay the same wage pr.
 productive hour of labor, i.e.
 the sector differences only reflect that the average worker in each sector
 provides a different number of productive hours of labor.
 Shifts in the sector-composition of employment therefore do not affect
 the total productivity units of labor available and does not directly affect
 total wages.
\end_layout

\begin_layout Subsubsection
Link to CES optimization
\end_layout

\begin_layout Standard
The dynamic first-order condition provides the input to the CES minimization
 problem used in solving the overall problem of the firm.
 The CES function is
\begin_inset Formula 
\[
p_{s,t}^{KL}Q_{s,t}^{KL}\equiv p_{s,t}^{KL}\left[\left(\mu_{s,t}^{k}\right)^{\frac{1}{E}}\left(u_{s,t}^{k}K_{s,t}\right)^{\frac{E-1}{E}}+\left(\mu_{s,t}^{l}\right)^{\frac{1}{E}}\left(L_{s,t}\right)^{\frac{E-1}{E}}\right]^{\frac{E}{E-1}}
\]

\end_inset

On the budget side of the CES problem we have the total cost associated
 with all the labor actually used, 
\begin_inset Formula $L$
\end_inset

:
\begin_inset Formula 
\[
p_{s,t}^{KL}Q_{s,t}^{KL}\equiv p_{s,t}^{L}L_{s,t}+p_{s,t}^{K}K_{s,t}
\]

\end_inset

where the object 
\begin_inset Formula $p_{s,t}^{L}$
\end_inset

 is the user cost of 
\begin_inset Formula $L$
\end_inset

.
 In the CES optimization problem we take a derivative with respect to 
\begin_inset Formula $L_{j,t}$
\end_inset

 and this yields
\begin_inset Formula 
\[
L_{s,t}=\mu_{s,t}^{l}Q_{s,t}^{KL}\left(\frac{p_{s,t}^{L}}{p_{s,t}^{KL}}\right)^{-E}
\]

\end_inset

The last identity ensures the CES problem is consistent with the optimization
 problem and shows the relationship between the user cost of 
\begin_inset Formula $L$
\end_inset

 and the optimal choice of vacancies.
 The accompanying expression for capital is 
\begin_inset Formula 
\[
u_{t}^{k}K_{s,t}=\mu_{s,t}^{k}Q_{s,t}^{KL}\left(\frac{p_{s,t}^{K}}{p_{s,t}^{KL}}\frac{1}{u_{t}^{k}}\right)^{-E}
\]

\end_inset

and it looks slightly different from the labor one but that is because utilizati
on is embodied in the 
\begin_inset Formula $L$
\end_inset

 object.
\end_layout

\begin_layout Subsection
The matching function
\begin_inset CommandInset label
LatexCommand label
name "subsec:The-matching-function"

\end_inset


\end_layout

\begin_layout Standard
We use the matching function from den Haan, Ramey & Watson (2000) which
 is defined in the following way:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
m\left(v_{t},n_{t}^{s}\right)=\frac{n_{t}^{s}}{\left[\left(v_{t}\right)^{1/\eta^{m}}+\left(n_{t}^{s}\right)^{1/\eta^{m}}\right]^{\eta^{m}}}
\]

\end_inset


\end_layout

\begin_layout Standard
The total number of searchers is the aggregate of households by age as well
 as non-resident job-searchers:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
n_{t}^{s}=n_{t}^{s,f}+\sum_{a}q_{a,t}^{lf}N_{a,t}
\]

\end_inset


\end_layout

\begin_layout Standard
and total vacancies is the sum of vacancies posted by each sector:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
v_{t}=\sum_{s}v_{s,t}
\]

\end_inset


\end_layout

\begin_layout Standard
The labor market equilibrium condition states that the number of job searchers
 finding a job must be equal to the number of vacancies filled and relates
 the vacancy matching rate 
\begin_inset Formula $m$
\end_inset

 to the job finding rate 
\begin_inset Formula $x$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
x_{t}n_{t}^{s}=m_{t}v_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
The matching function specification has a few important properties.
 It has constant returns to scale and can be rewritten as a function of
 labor market tightness 
\begin_inset Formula $\frac{v_{t}}{n_{t}^{s}}$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
m\left(\frac{v_{t}}{n_{t}^{s}}\right)=\left[\left(\frac{v_{t}}{n_{t}^{s}}\right)^{1/\eta^{m}}+1\right]^{-\eta^{m}}
\]

\end_inset


\end_layout

\begin_layout Standard
It is also bounded between zero and one.
 I.e.
 if there are no other vacancies, a firm that posts a vacancy is sure to
 fill it.
 However, if there are no job-searchers left the probability of filling
 a vacancy goes to zero.
 More importantly, the job finding rate 
\begin_inset Formula $x$
\end_inset

 is also bounded between zero and one.
\begin_inset Foot
status collapsed

\begin_layout Plain Layout
The finding rate as a function of labor market tightness is 
\begin_inset Formula $x\left(\frac{v_{t}}{n_{t}^{s}}\right)=\left[\left(\frac{v_{t}}{n_{t}^{s}}\right)^{-1/\eta^{m}}+1\right]^{-\eta^{m}}$
\end_inset


\end_layout

\end_inset

 Combined with the condition that labor force participation 
\begin_inset Formula $q_{a,t}^{lf}$
\end_inset

 is bounded, this ensures that both unemployment and employment rates are
 positive for all ages.
 Finally, the parameter 
\begin_inset Formula $\eta^{m}$
\end_inset

 controls how sensitive households' and firms' probabilities of finding
 a job or filling a vacancy are to changes in labor market conditions.
 
\begin_inset Formula $\eta^{m}$
\end_inset

 is one of the key parameters that we set in order to match MAKRO's impulse
 responses to a number of empirical models.
\end_layout

\begin_layout Subsection
Aggregation
\end_layout

\begin_layout Subsubsection
Hours and productivity
\begin_inset CommandInset label
LatexCommand label
name "subsec:Hours-and-productivity"

\end_inset


\end_layout

\begin_layout Standard
Total labor hours match both the sum of sectors (demand) and the sum over
 households and non-resident workers (supply):
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
h_{t}n_{t}=\sum_{s}h_{s,t}n_{s,t}=\sum_{a}\left(h_{a,t}^{e}n_{a,t}^{e}\right)+h_{t}^{f}n_{t}^{f}
\]

\end_inset


\end_layout

\begin_layout Standard
Average productivity, 
\begin_inset Formula $\rho$
\end_inset

, is defined from the identity
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\rho_{t}h_{t}n_{t}=\sum_{a}\left(\rho_{a,t}^{e}h_{a,t}^{e}n_{a,t}^{e}\right)+\rho_{t}^{f}h_{t}^{f}n_{t}^{f}
\]

\end_inset


\end_layout

\begin_layout Standard
To ensure that the total productive units by sector also aggregates to the
 total, i.e.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\rho_{t}h_{t}n_{t}=\sum_{s}\rho_{s,t}h_{s,t}n_{s,t}\label{eq:productivity_split}
\end{equation}

\end_inset


\change_inserted 1344751391 1677579511

\end_layout

\begin_layout Standard
we let sector productivity shift endogenously with changes in average productivi
ty
\change_inserted 1344751391 1677580254
.
\change_unchanged

\end_layout

\begin_layout Standard
We first separate labor productivity units between the public and private
 sectors
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\rho_{t}h_{t}n_{t} & =\sum_{s}\rho_{s,t}h_{s,t}n_{s,t}\\
 & =\sum_{s\ne\text{Pub}}\rho_{s,t}h_{s,t}n_{s,t}+\rho_{\text{Pub},t}h_{\text{Pub},t}n_{\text{Pub},t}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
and impose a fixed ratio between public sector productivity units and aggregate
 
\emph on
structural 
\emph default
productivity:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\rho_{\text{Pub},t}=\mu_{\text{Pub},t}^{\rho}\rho_{t}^{*}
\]

\end_inset


\end_layout

\begin_layout Standard
This ensures that a change in public employment has a proportional effect
 on the public sector payroll, before general equilibrium effects, and that
 changes in employment between private sectors has no direct effect on the
 public payroll.
 Note that 
\begin_inset Formula $\rho_{\text{Pub},t}$
\end_inset

 has no effect on public production (see the chapter on public production),
 but 
\begin_inset Formula $\rho_{\text{Pub},t}w_{t}$
\end_inset

 is the hourly wage paid by the government.
 Sector specific productivity is calibrated to match differences in hourly
 wages across sectors, and only reflect differences in productivity insofar
 as differences in wages in the data reflect differences in productivity.
\end_layout

\begin_layout Standard
Given public sector productivity, the productivity in each private sector
 is given by
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\rho_{s,t}=\mu_{s,t}^{\rho}\cdot\frac{\sum_{s\ne\text{Pub}}\rho_{s,t}h_{s,t}n_{s,t}}{\sum_{s\ne\text{Pub}}\mu_{s}^{\rho}h_{s}n_{s}}\mid s\ne\text{Pub}
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\mu_{s,t}^{\rho}$
\end_inset

 is a parameter which controls for differences in productivity (hourly wages)
 between private sectors.
 The interpretation is as follows: Differences in wages between sectors
 are entirely due to differences in productivity tied to the composition
 of workers in different sectors.
 Shifts in the sector-composition of employment therefore does not affect
 the total productivity units of labor available and does not directly affect
 total wages.
\end_layout

\begin_layout Subsubsection
Employment law of motion, firm's point of view
\end_layout

\begin_layout Standard
Total employment 
\begin_inset Formula $n_{t}$
\end_inset

 follows the law of motion
\begin_inset Formula 
\[
n_{t}=\left(1-\delta_{t}\right)n_{t-1}+m_{t}v_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
Since we make the necessary assumption to ensure non-resident workers have
 the same law of motion as residents we can write
\begin_inset Formula 
\[
1-\delta_{t}=\frac{\sum_{a}\left(1-\delta_{a,t}\right)n_{a-1,t-1}^{e}\frac{N_{a,t}}{N_{a-1,t-1}}}{\sum_{a}n_{a-1,t-1}^{e}}
\]

\end_inset

where the aggregate destruction rate 
\begin_inset Formula $\delta_{t}$
\end_inset

 is now endogenous (although exogenous to the firm).
 Unlike the age-specific job destruction rate, the aggregate job destruction
 rate 
\begin_inset Formula $\delta_{t}$
\end_inset

 includes job destruction due to migration or death - both effects are captured
 by the change in cohort size 
\begin_inset Formula $\frac{N_{a,t}}{N_{a-1,t-1}}$
\end_inset

 (see Appendix 
\begin_inset CommandInset ref
LatexCommand ref
reference "subsec:labor_market_migration"
plural "false"
caps "false"
noprefix "false"

\end_inset

).
\end_layout

\begin_layout Standard
Because the firm cannot choose whom it hires, it effectively always hires
 the average job searcher.
 Then, as we impose the same age distribution inside every firm irrespective
 of sector, all firms are the same in this respect and face the same job
 destruction rate.
 Since they do not control who they hire, they do not control the job destructio
n rate either (see Appendix 
\begin_inset CommandInset ref
LatexCommand ref
reference "subsec:ages_and_sectors"
plural "false"
caps "false"
noprefix "false"

\end_inset

).
\end_layout

\begin_layout Subsection
Wage determination
\end_layout

\begin_layout Standard
We have derived the equations determining optimal search/participation (labor
 supply) and optimal vacancy posting (labor demand), but in both cases taking
 the wage level as given.
 To determine the wage level, we use an adapted Nash bargaining problem.
\end_layout

\begin_layout Standard
We assume a unique bargaining agent on both sides of the market which aggregate,
 on one side, preferences of all firms from all sectors, and, on the other,
 preferences of all workers of all ages.
 We also assume that these agents, which we can call unions, are “distant”
 from their firm and worker constituents and solve a simplified problem
 on their behalf.
 These assumptions allow for a degree of freedom in setting up the surpluses
 that enter the bargaining problem.
 One other important assumption is that although we consider a single bargaining
 problem that includes all agents, the intervening unions disregard the
 impact of the wage on equilibrium employment.
 Finally, we model wage rigidity directly in the bargaining problem through
 an adjustment cost function that extends the usual Nash bargaining surplus.
\end_layout

\begin_layout Subsubsection
Bargaining
\end_layout

\begin_layout Standard
The solution to the bargaining problem results in a bargained wage 
\begin_inset Formula $w_{t}$
\end_inset

.
 Wage rigidity is introduced by adding a cost function to the standard Nash
 formulation.
 This cost function captures a utility loss of changing wages as perceived
 by the bargaining agents.
\begin_inset Foot
status open

\begin_layout Plain Layout
Ljungqvist and Sargent, (2017) discuss standard formulations of the bargaining
 problem.
 The cost function draws on Kravik & Mimir (2019) and we use it also in
 the price setting problem.
\end_layout

\end_inset

 It also makes the problem dynamic.
 
\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $S_{t}$
\end_inset

 denote the surplus of the unions representing the workers and 
\begin_inset Formula $J_{t}$
\end_inset

 that of the firms.
 These surpluses which enter the Nash bargaining function are given by the
 difference between the value of agreement and the value of disagreement
 for each party.
 Disagreement is an out of equilibrium event that never happens in model
 (we do not model labor disputes explicitly).
\end_layout

\begin_layout Standard
In the case of the union representing workers the surplus is
\begin_inset Formula 
\[
S\left(w_{t}\right)=\underbrace{\left(1-\bar{\tau}_{t}\right)\rho_{t}h_{t}n_{t}}_{S_{t}^{\prime}}w_{t}-o_{t}
\]

\end_inset

where 
\begin_inset Formula $\bar{\tau}_{t}$
\end_inset

 is the weighted average of the personal income tax rate
\begin_inset Foot
status collapsed

\begin_layout Plain Layout
We assume that non-resident workers pay the same taxes as average resident
 workers.
\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\bar{\tau}_{t}=\frac{\sum_{a}\tau_{a,t}\rho_{a,t}^{e}h_{a,t}^{e}n_{a,t}^{e}+\overline{\tau}_{t}\rho_{t}^{f}h_{t}^{f}n_{t}^{f}}{\rho_{t}h_{t}n_{t}}=\frac{\sum_{a}\tau_{a,t}\rho_{a,t}^{e}h_{a,t}^{e}n_{a,t}^{e}}{\sum_{a}\rho_{a,t}^{e}h_{a,t}^{e}n_{a,t}^{e}}
\]

\end_inset


\end_layout

\begin_layout Standard
and 
\begin_inset Formula $o_{t}$
\end_inset

 is an outside option value which is exogenous to the agents
\begin_inset Foot
status collapsed

\begin_layout Plain Layout
We model the outside option as a constant share of the sum of wages, weighed
 by the job finding probability:
\begin_inset Formula 
\[
o_{t}=\mu^{o}S_{t}^{\prime}x_{t}w_{t}
\]

\end_inset


\end_layout

\begin_layout Plain Layout
The expression for the outside option can be interpreted as a share of the
 period and foregone wage 
\begin_inset Formula $1-\mu^{o}$
\end_inset

 wasted in negotiations, after which the job seeker can find a different
 job with probability 
\begin_inset Formula $x_{t}$
\end_inset

.
 Without better empirical foundations we are not ready to directly link
 unemployment compensation to the wage bargaining process, and we allow
 for the idea that searching for a different job is also an important outside
 option in decentralized negotiations.
 
\end_layout

\end_inset

.
\end_layout

\begin_layout Standard
On the firm side the surplus is the difference between the marginal product
 of labor and the wage paid, summing over all private sectors
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
J\left(w_{t}\right)=\sum_{s\in\text{private}}\left[1-\tau_{t}^{c}\right]\left(P_{s,t}^{L}u_{s,t}\rho_{s,t}h_{s,t}n_{s,t}-\rho_{s,t}h_{s,t}n_{s,t}\left[1+\tau_{s,t}^{L}\right]w_{t}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
It is useful to divide the firm surplus into two parts: 1) the value of
 the labor to the firms after taxes, 
\begin_inset Formula $J_{t}^{+}$
\end_inset

, and 2) net wages paid, 
\begin_inset Formula $J_{t}^{\prime}\cdot w_{t}$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
J\left(w_{t}\right)=\underbrace{\sum_{s\in\text{private}}\left[1-\tau_{s,t}^{c}\right]P_{s,t}^{L}u_{s,t}\rho_{s,t}h_{s,t}n_{s,t}}_{J_{t}^{+}}-\underbrace{\sum_{s\in\text{private}}\left[1-\tau_{t}^{c}\right]\rho_{s,t}h_{s,t}n_{s,t}\left[1+\tau_{s,t}^{L}\right]}_{-J_{t}^{\prime}}w_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
Suppressing the sector dimension and ignoring taxes makes it clear that
 the heart of the firm's bargaining surplus is the wedge between wages and
 the marginal product of labor:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
J\left(w_{t}\right)\approx\underbrace{\rho_{t}h_{t}n_{t}}_{\text{scale}}\left(\underbrace{P_{t}^{L}}_{\text{MPL}}-\underbrace{w_{t}}_{\text{wage}}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
The wedge (between wages and the marginal product of labor) exists due the
 cost of posting vacancies which is a sunk cost in the bargaining situation.
 I.e.
 the firm's expected value of posting a vacancy is zero in equilibrium,
 but the value of a vacancy that has turned into a match is positive.
 The value of a match is often called the matching surplus and it is this
 surplus which is bargained over and divided into a bargaining surplus for
 the worker and a bargaining surplus for the firm.
\end_layout

\begin_layout Standard
The bargaining surpluses are mostly static and wage dynamics primarily enter
 the bargaining problem through an adjustment cost function.
 We define the bargaining loss function as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
L_{t}=\left(S_{t}\right)^{1-\phi_{t}}\left(J_{t}\right)^{\phi_{t}}-G_{t}\label{eq:bargaining_loss}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $G(\cdot)$
\end_inset

 is a wage adjustment cost and 
\begin_inset Formula $\phi_{t}$
\end_inset

 is the Nash bargaining power parameter.
 We now specify the adjustment cost function 
\begin_inset Formula $G_{t}\equiv g_{t}+\beta_{t+1}g_{t+1}$
\end_inset

 where
\begin_inset Formula 
\[
g_{t}=\frac{\psi^{\omega}}{2}\left[\frac{w_{t}}{w_{t-1}}/\frac{w_{t-1}}{\overline{w}_{t-2}}-1\right]^{2}
\]

\end_inset


\end_layout

\begin_layout Standard
and where 
\begin_inset Formula $\overline{w}_{t-2}$
\end_inset

 is an exogenous object which in equilibrium satisfies 
\begin_inset Formula $w_{t-2}=\overline{w}_{t-2}$
\end_inset

.
\end_layout

\begin_layout Standard
The bargaining problem then consists of maximizing the loss function (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:bargaining_loss"
plural "false"
caps "false"
noprefix "false"

\end_inset

) with respect to 
\begin_inset Formula $w_{t}$
\end_inset

, yielding
\end_layout

\begin_layout Standard
\begin_inset Branch wage_derivation
inverted 0
status collapsed

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\frac{\partial G_{t}}{\partial w_{t}} & =\frac{\partial g_{t}}{\partial w_{t}}+\beta_{t+1}\frac{\partial g_{t+1}}{\partial w_{t}}\\
 & =\frac{\psi^{\omega}}{w_{t}}\left[\frac{w_{t}}{w_{t-1}}/\frac{w_{t-1}}{\overline{w}_{t-2}}-1\right]\left[\frac{w_{t}}{w_{t-1}}/\frac{w_{t-1}}{\overline{w}_{t-2}}\right]-2\beta_{t+1}\frac{\psi^{\omega}}{w_{t}}\left[\frac{w_{t+1}}{w_{t}}/\frac{w_{t}}{\overline{w}_{t-1}}-1\right]\left[\frac{w_{t+1}}{w_{t}}/\frac{w_{t}}{\overline{w}_{t-1}}\right]\\
 & =\frac{\psi^{\omega}}{w_{t}}\left[\frac{w_{t}}{w_{t-1}}/\frac{w_{t-1}}{\overline{w}_{t-2}}-1\right]\left[\frac{w_{t}}{w_{t-1}}/\frac{w_{t-1}}{\overline{w}_{t-2}}\right]-2\beta_{t+1}\frac{w_{t+1}}{w_{t}}\frac{\psi^{\omega}}{w_{t+1}}\left[\frac{w_{t+1}}{w_{t}}/\frac{w_{t}}{\overline{w}_{t-1}}-1\right]\left[\frac{w_{t+1}}{w_{t}}/\frac{w_{t}}{\overline{w}_{t-1}}\right]\\
 & =\frac{\partial g_{t}}{\partial w_{t}}-2\beta_{t+1}\frac{w_{t+1}}{w_{t}}\frac{\partial g_{t+1}}{\partial w_{t+1}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
L_{t}=\left(S_{t}\right)^{1-\phi_{t}}\left(J_{t}\right)^{\phi_{t}}-G_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\partial L_{t}}{\partial w_{t}}=\left[1-\phi_{t}\right]S_{t}^{\prime}\left(S_{t}\right)^{-\phi_{t}}\left(J_{t}\right)^{\phi_{t}}+\phi_{t}J_{t}^{\prime}\left(S_{t}\right)^{1-\phi_{t}}\left(J_{t}\right)^{\phi_{t}-1}-\frac{\partial G_{t}}{\partial w_{t}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
0=\left[1-\phi_{t}\right]\frac{J_{t}}{J_{t}^{\prime}}+\phi_{t}\frac{S_{t}}{S_{t}^{\prime}}-\frac{\left(S_{t}\right)^{\phi_{t}}\left(J_{t}\right)^{1-\phi_{t}}}{S_{t}^{\prime}J_{t}^{\prime}}\frac{\partial G_{t}}{\partial w_{t}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
J\left(w_{t}\right)=J^{+}+J_{t}^{\prime}w_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
S\left(w_{t}\right)=S_{t}^{\prime}w_{t}-o_{t}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
0=\left[1-\phi_{t}\right]\frac{J^{+}+J_{t}^{\prime}w_{t}}{J_{t}^{\prime}}+\phi_{t}\frac{S_{t}^{\prime}w_{t}-o_{t}}{S_{t}^{\prime}}-\frac{\left(S_{t}\right)^{\phi_{t}}\left(J_{t}\right)^{1-\phi_{t}}}{S_{t}^{\prime}J_{t}^{\prime}}\frac{\partial G_{t}}{\partial w_{t}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
w_{t}=\phi_{t}\frac{o_{t}}{S_{t}^{\prime}}-\left[1-\phi_{t}\right]\frac{J^{+}}{J_{t}^{\prime}}+\frac{\left(S_{t}\right)^{\phi_{t}}\left(J_{t}\right)^{1-\phi_{t}}}{S_{t}^{\prime}J_{t}^{\prime}}\frac{\partial G_{t}}{\partial w_{t}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
w_{t}=\phi_{t}\frac{o_{t}}{S_{t}^{\prime}}-\left[1-\phi_{t}\right]\frac{J^{+}}{J_{t}^{\prime}}+\frac{\left(S_{t}\right)^{\phi_{t}}\left(J_{t}\right)^{1-\phi_{t}}}{S_{t}^{\prime}J_{t}^{\prime}}\underset{\frac{\partial G_{t}}{\partial w_{t}}}{\underbrace{\left[\frac{\partial g_{t}}{\partial w_{t}}-2\beta_{t+1}\frac{w_{t+1}}{w_{t}}\frac{\partial g_{t+1}}{\partial w_{t+1}}\right]}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
w_{t} & =\phi_{t}\frac{o_{t}}{S_{t}^{\prime}}-\left[1-\phi_{t}\right]\frac{J^{+}}{J_{t}^{\prime}}+\left\{ \frac{\left(S_{t}\right)^{\phi_{t}}\left(J_{t}\right)^{1-\phi_{t}}}{S_{t}^{\prime}J_{t}^{\prime}}\frac{1}{w_{t}}\right\} \left[w_{t}\frac{\partial g_{t}}{\partial w_{t}}-2\beta_{t+1}w_{t+1}\frac{\partial g_{t+1}}{\partial w_{t+1}}\right]\\
 & =\phi_{t}\frac{o_{t}}{S_{t}^{\prime}}-\left[1-\phi_{t}\right]\frac{J^{+}}{J_{t}^{\prime}}+\left\{ \frac{\left(S_{t}\right)^{\phi_{t}}\left(J_{t}\right)^{1-\phi_{t}}}{S_{t}^{\prime}J_{t}^{\prime}}\frac{1}{w_{t}}\right\} \left[\Psi_{t}-2\beta_{t+1}\Psi_{t+1}\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
w_{t}\frac{\partial g_{t}}{\partial w_{t}}=\underbrace{\psi^{\omega}\left[\frac{w_{t}}{w_{t-1}}/\frac{w_{t-1}}{\overline{w}_{t-2}}-1\right]\left[\frac{w_{t}}{w_{t-1}}/\frac{w_{t-1}}{\overline{w}_{t-2}}\right]}_{\Psi_{t}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
w_{t}\frac{\partial g_{t+1}}{\partial w_{t+1}}=\psi^{\omega}\left[\frac{w_{t+1}}{w_{t}}/\frac{w_{t}}{\overline{w}_{t-1}}-1\right]\left[\frac{w_{t+1}}{w_{t}}/\frac{w_{t}}{\overline{w}_{t-1}}\right]=\Psi_{t+1}
\]

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
w_{t}=\phi_{t}\frac{o_{t}}{S_{t}^{\prime}}-\left[1-\phi_{t}\right]\frac{J_{t}^{+}}{J_{t}^{\prime}}+\underbrace{\left[\frac{\left(S_{t}\right)^{\phi_{t}}\left(J_{t}\right)^{1-\phi_{t}}}{S_{t}^{\prime}J_{t}^{\prime}}\frac{1}{w_{t}}\right]}_{\approx\text{constant}}\left[\frac{\partial g_{t}}{\partial w_{t}}w_{t}-2\beta_{t+1}\frac{\partial g_{t+1}}{\partial w_{t+1}}w_{t+1}\right]\label{eq:bargaining_FOC}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
For computational efficiency we replace the term 
\begin_inset Formula $\left[\frac{\left(S_{t}\right)^{\phi_{t}}\left(J_{t}\right)^{1-\phi_{t}}}{S_{t}^{\prime}J_{t}^{\prime}}\frac{1}{w_{t}}\right]$
\end_inset

 with a constant as there is no discernible difference between IRFs from
 holding it constant vis-a-vis letting it be endogenous.
 Note that the wage rigidity term is zero in any steady state.
\end_layout

\begin_layout Standard
The fraction associated with the firm surplus, 
\begin_inset Formula $\frac{J_{t}^{+}}{J_{t}^{\prime}}$
\end_inset

, can be rewritten as a function of aggregate measures with a term 
\begin_inset Formula $f_{t}^{J}$
\end_inset

 that captures all sector composition effects
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{J_{t}^{+}}{J_{t}^{\prime}}=\frac{\rho_{t}h_{t}n_{t}\left[1-\tau_{t}^{c}\right]P_{t}^{L}}{-\rho_{t}h_{t}n_{t}\left[1-\tau_{t}^{c}\right]\left[1+\tau_{t}^{L}\right]}f_{t}^{J}=-f_{t}^{J}\frac{P_{t}^{L}}{1+\tau_{t}^{L}}
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $P_{t}^{L}$
\end_inset

 and 
\begin_inset Formula $\tau_{t}^{L}$
\end_inset

 are both sector averages.
\end_layout

\begin_layout Standard
Inserting this, and our function for the outside option of the worker representa
tives, 
\begin_inset Formula $o_{t}=\mu^{o}x_{t}S_{t}^{\prime}w_{t}$
\end_inset

, we get the wage as a function of the marginal product of labor:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
